---
import { projects } from "../../config/projects.json";
---

<h2 class="font-bold text-5xl my-8 text-center text-cyan-400">Proyectos</h2>

{
    projects.map((project) => (
        <div class="flex flex-col mb-4 text-center md:text-left md:flex-row md:ml-20">
            <div class="flex-1 p-4">
                <h2 class="font-bold text-2xl my-4 text-cyan-200">{project.title}</h2>
                <p class="my-2 text-cyan-50">{project.description}</p>
                <button class="bg-cyan-600 px-3 py-2 hover:bg-cyan-500 text-cyan-100">More info</button>
            </div>
            <div class="flex-1">
                <img src={project.image} class="w-72 m-auto" alt={project.description} loading="lazy"/>
            </div>
        </div>
    ))
}
